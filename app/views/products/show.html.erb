<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %>
      &nbsp
    <% @product_rating.to_i.times do  %>
 <span class="glyphicon glyphicon-star"></span>
<% end %> 
<% @empty_stars.times do %>
 <span class="glyphicon glyphicon-star-empty"></span>
<% end %> </h1>

  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd><br>
<dd>

        
    <div  >
      <%= form_for [:admin, @product] do |form| %>

        <% if form.object.errors.any? %>
          <div class="alert alert-danger">
            <strong>The following errors prevented saving:</strong>
            <ul>
              <% form.object.errors.full_messages.each do |error| %>
                <li><%= error %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        

        <div class="form-group" >
          <%= form.label 'Rating' %>
          
<select id="review_id" name="product_id">
   <option value="1">1</option>
   <option value="2">2</option>
   <option value="3">3</option>
   <option value="3">4</option>
   <option value="3">5</option>
</select>

          <%= form.text_area :description, class: 'review-text' %>
        </div>

        <%= form.submit 'Submit Review / Rating', class: 'btn btn-primary' %>
      <% end %>
    
  </div></dd>
        </dl>
       
      </div>
    </div>

  </article>

</section>
